{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.advert_details'|trans({'%id%': advert.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.advert_details'|trans({'%id%': advert.id|default('')}) }}</h1>
    {% if advert is defined and advert|length %}
        <dl class="dl-horizontal">
            <dt>{{ 'label.id'|trans }}</dt>
            <dd>{{ advert.id }}</dd>
            <dt>{{ 'label.created_at'|trans }}</dt>
            <dd>{{ advert.createdAt|date('Y/m/d') }}</dd>
            <dt>{{ 'label.updated_at'|trans }}</dt>
            <dd>{{ advert.updatedAt|date('Y/m/d') }}</dd>
            <dt>{{ 'label.title'|trans }}</dt>
            <dd>{{  advert.title }}</dd>
            <dt>{{ 'label.author'|trans }}</dt>
            <dd>{{  advert.author.email }}</dd>
            <dt>{{ 'label.content'|trans }}</dt>
            <dd>{{  advert.content|markdown_to_html }}</dd>
        </dl>
        <p class="mt-5">
            <a class="btn btn-primary" href="{{ url('advert_edit', {id: advert.id}) }}" title="{{ 'action.edit'|trans }}">
                {{ 'action.edit'|trans }}
            </a>
            <a class="btn btn-danger" href="{{ url('advert_delete', {id: advert.id}) }}"
               title="{{ 'action.delete'|trans }}">
                {{ 'action.delete'|trans }}
            </a>
        </p>
        <p>
            <a class="btn btn-outline-primary" href="{{ url('advert_index') }}" title="{{ 'action.back_to_list'|trans }}">
                {{ 'action.back_to_list'|trans }}
            </a>
        </p>
    {% else %}
        <p>
            {{ 'message.record_not_found'|trans }}
        </p>
    {% endif %}
{% endblock %}