{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.advert_list'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.advert_list'|trans }}</h1>
    {% if adverts is defined and adverts|length %}
        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ 'label.id'|trans }}</th>
                <th>{{ 'label.created_at'|trans }}</th>
                <th>{{ 'label.updated_at'|trans }}</th>
                <th>{{ 'label.title'|trans }}</th>
                <th>{{ 'label.actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for advert in adverts %}
                <tr>
                    <td>{{ advert.id }}</td>
                    <td>{{ advert.createdAt|date('Y/m/d') }}</td>
                    <td>{{ advert.updatedAt|date('Y/m/d') }}</td>
                    <td>{{ advert.title }}</td>
                    <td>
                        <a href="{{ url('advert_show', {id: advert.id}) }}" title="{{ 'action.view'|trans }}">
                            {{ 'action.view'|trans }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>
            {{ 'message.empty_list'|trans }}
        </p>
    {% endif %}
{% endblock %}